.row.col-md-offset-4.col-md-4
  %h2.center= Legislative::Application.config.application_name
  %hr
  .tabbable
    %ul.nav.nav-tabs
      %li.active
        %a{"data-toggle" => "tab", :href => "#tab1"}= t('users.log_in')
      %li
        %a{"data-toggle" => "tab", :href => "#tab2"}= t('users.sign_up')
    .tab-content
      #tab1.tab-pane.active
        .panel
          = render "sessions/form"
      #tab2.tab-pane
        .panel
          = render :partial => "form", :locals => { :user => @user }
